@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>FederalBonds</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
<!-- ============================================================
     ===== Main Navigation Bar
     ===== Displays navigation links depending on login state.
     ============================================================ -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- ===== Brand / Home link ===== -->
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <strong style="margin-top: -2%;">FederalBonds</strong>
        </a>

        <!-- ===== Mobile navigation toggle ===== -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- ===== Navigation items ===== -->
        <div class="collapse navbar-collapse d-flex align-content-center text-center" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="margin-top: 1px;">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="FAQ">FAQ</a>
                </li>

                <!-- ===== Authenticated user navigation ===== -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Investments" asp-action="Index">My Investments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Profiles" asp-action="Index">My Profile</a>
                    </li>
                }
            </ul>

            <!-- ===== User actions (Login / Logout) ===== -->
            <ul class="navbar-nav me-5 mb-2 mb-lg-0">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <span class="navbar-text me-3">@User.Identity?.Name</span>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link" style="display:inline; margin-top:-2%; padding:0;">
                                Logout
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">Open Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- ============================================================
     ===== Main Content Area
     ===== Placeholder for dynamically rendered Razor views.
     ============================================================ -->
<div class="container mt-4">
    @RenderBody()
</div>

<!-- ============================================================
     ===== Footer Scripts
     ============================================================ -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
